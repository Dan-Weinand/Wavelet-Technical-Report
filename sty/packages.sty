\usepackage{amsmath}

% Provides additional mathematical fonts. For example, it provides 
% blackboard symbols via \mathfbb{}.
% It is a superset of amsfonts.sty.
% See http://carroll.aset.psu.edu/pub/CTAN/fonts/amsfonts/doc/amssymb.pdf
\usepackage{amssymb}

% Provides enhanced an \newtheorem command and proof environment.  
% Must be loaded after amsmath.sty
% See ftp://ftp.ams.org/ams/doc/amscls/amsthdoc.pdf
\usepackage{amsthm}
% Theorem: An idea that has been demonstrated as true or is assumed to be so 
% demonstrable.
\newtheorem{thm}{Theorem}
% Corollary: A proposition that follows with little or no proof required from 
% one already proven.
\newtheorem{cor}{Corollary}
% Lemma: A subsidiary proposition assumed to be valid and used to demonstrate 
% a principal proposition.
\newtheorem{lem}[thm]{Lemma}
% Proposition: Connotes a statement with a simple proof, or a basic consequence 
% of a definition that needs to be stated, but is obvious enough to require no
% proof. 
\newtheorem{prop}{Proposition}


